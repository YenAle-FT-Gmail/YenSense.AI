# YenSense AI Configuration Template
# Copy this to config.yaml and add your actual API keys

api_keys:
  alpha_vantage: "YOUR_ALPHA_VANTAGE_API_KEY"
  fred: "YOUR_FRED_API_KEY"  # Get from https://fred.stlouisfed.org/docs/api/api_key.html
  finnhub: "YOUR_FINNHUB_API_KEY"  # Get from https://finnhub.io/register
  openai: "YOUR_OPENAI_API_KEY"  # Get from https://platform.openai.com/api-keys
  estat: "YOUR_ESTAT_API_KEY"  # Get from https://www.e-stat.go.jp/mypage/user/preregister

# Data fetch settings
data:
  fx_pairs:
    - "USD/JPY"
    - "EUR/JPY"
  
  cache_expiry_hours: 24
  retry_attempts: 3
  retry_delay_seconds: 5

# Output settings
output:
  morning_brief:
    target_wpm: 150  # Words per minute for TTS
    target_duration_seconds: 180  # 3 minutes
  
  weekly_report:
    target_word_count: 800
    chart_height: 500
    chart_width: 900

# Scraping targets
scraping:
  user_agent: "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"
  timeout_seconds: 10
  
  targets:
    - name: "BOJ"
      url: "https://www.boj.or.jp/en/"
      type: "policy"
    
    - name: "Reuters Japan"
      url: "https://www.reuters.com/markets/asia/"
      type: "news"
    
    - name: "Nikkei"
      url: "https://asia.nikkei.com/Economy"
      type: "news"

# Schedule settings (JST)
schedule:
  daily_brief_time: "06:30"
  weekly_report_day: "monday"
  weekly_report_time: "06:30"
  timezone: "Asia/Tokyo"

# GitHub Pages settings
github_pages:
  branch: "gh-pages"
  directory: "docs"
  enabled: true

# Logging
logging:
  level: "INFO"
  file: "logs/system.log"
  max_size_mb: 10
  backup_count: 5